<mvc:View
  controllerName="bookstore.ui5.controller.App"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m">
  <App>
    <pages>
      <Page title="Bookstore">
        <content>
          <VBox>
            <Text text="Welcome to the Bookstore SAPUI5 App!" />
            <Button text="Add Product" press="onAddProduct" type="Emphasized" />
            <Table id="productsTable" items="{/Products}" width="100%">
              <columns>
                <Column><Text text="ID" /></Column>
                <Column><Text text="Name" /></Column>
                <Column><Text text="Price" /></Column>
              </columns>
              <items>
                <ColumnListItem type="Active" press="onProductSelect">
                  <cells>
                    <Text text="{ID}" />
                    <Text text="{Name}" />
                    <Text text="{Price}" />
                  </cells>
                </ColumnListItem>
              </items>
            </Table>
          </VBox>
          <Button text="Add Order" press="onAddOrder" type="Emphasized" />
          <Dialog id="addOrderDialog" title="Add Order" draggable="true" resizable="true">
            <content>
              <VBox>
                <Label text="Product" />
                <Select id="orderProduct" items="{/Products}">
                  <items>
                    <core:Item key="{ID}" text="{title}" />
                  </items>
                </Select>
                <Label text="Amount" />
                <Input id="orderAmount" type="Number" />
                <Label text="Currency" />
                <Input id="orderCurrency" value="EUR" />
              </VBox>
            </content>
            <beginButton>
              <Button text="Add" press="onConfirmAddOrder" type="Emphasized" />
            </beginButton>
            <endButton>
              <Button text="Cancel" press="onCancelAddOrder" />
            </endButton>
          </Dialog>
          <Dialog id="productDetailsDialog" title="Product Details" draggable="true" resizable="true">
            <content>
              <Text id="detailsText" text="" />
            </content>
            <endButton>
              <Button text="Close" press="onCloseDetails" />
            </endButton>
          </Dialog>
          <Dialog id="addProductDialog" title="Add Product" draggable="true" resizable="true">
            <content>
              <VBox>
                <Label text="Title" />
                <Input id="addTitle" />
                <Label text="Price" />
                <Input id="addPrice" type="Number" />
                <Label text="Currency" />
                <Input id="addCurrency" value="EUR" />
              </VBox>
            </content>
            <beginButton>
              <Button text="Add" press="onConfirmAddProduct" type="Emphasized" />
            </beginButton>
            <endButton>
              <Button text="Cancel" press="onCancelAddProduct" />
            </endButton>
          </Dialog>
        </content>
      </Page>
    </pages>
  </App>
</mvc:View>
